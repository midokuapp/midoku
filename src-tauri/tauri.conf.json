{
  "$schema": "https://schema.tauri.app/config/2.0.0-rc",
  "productName": "Midoku",
  "version": "0.0.0",
  "identifier": "app.midoku",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "deno task dev",
    "beforeBuildCommand": "deno task build"
  },
  "app": {
    "windows": [
      {
        "title": "Midoku",
        "width": 600,
        "height": 1000,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": {
        "img-src": "'self' asset: http://asset.localhost"
      },
      "assetProtocol": {
        "enable": true,
        "scope": ["$APPLOCALDATA/extensions/**"]
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
